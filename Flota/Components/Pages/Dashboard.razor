@page "/"
@using Flota.Domain.Entities
@using Flota.Domain.Interfaces
@inject IPojazdSerwis PojazdSerwis
@inject IUbezpieczenieSerwis UbezpieczenieSerwis
@inject IPrzydzialSerwis PrzydzialSerwis
@inject IHarmonogramSerwis HarmonogramSerwis

@rendermode RenderMode.InteractiveServer

<PageTitle>Panel FlotaTrack</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">Dzień dobry, Zarządco!</h2>
            <p class="text-muted">Oto podsumowanie sytuacji we flocie na dzisiaj.</p>
        </div>
        <div class="text-end">
            <span class="fs-5 fw-bold text-primary">@DateTime.Now.ToString("dd MMMM yyyy")</span><br/>
            <small class="text-muted">@DateTime.Now.ToString("dddd")</small>
        </div>
    </div>

    @if (alertSerwisowy.Any() || alertUbezpieczeniowy.Any())
    {
        <div class="card shadow-sm border-danger mb-4">
            <div class="card-header bg-danger text-white fw-bold">
                Wymagana Twoja uwaga (@(alertSerwisowy.Count + alertUbezpieczeniowy.Count))
            </div>
            <div class="list-group list-group-flush">
                @foreach (var s in alertSerwisowy)
                {
                    <a href="/pojazdy/@s.PojazdId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span>
                            <span class="badge bg-warning text-dark me-2">SERWIS</span>
                            <strong>@s.Pojazd?.Marka @s.Pojazd?.Model</strong> (@s.Pojazd?.NumerRejestracyjny) - Wymagany przegląd!
                        </span>
                        <small class="text-muted">Przekroczono limit km/dni</small>
                    </a>
                }
                @foreach (var u in alertUbezpieczeniowy)
                {
                    <a href="/pojazdy/@u.PojazdId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span>
                            <span class="badge bg-info text-dark me-2">POLISA</span>
                            <strong>@u.Pojazd?.Marka @u.Pojazd?.Model</strong> - Polisa wygasa: @u.DataZakonczenia.ToShortDateString()
                        </span>
                        <small class="text-danger fw-bold">Zostało dni: @((u.DataZakonczenia - DateTime.Now).Days)</small>
                    </a>
                }
            </div>
        </div>
    }

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card h-100 border-success shadow-sm">
                <div class="card-body text-center">
                    <h1 class="display-4 fw-bold text-success">@dostepneAuta</h1>
                    <p class="text-muted mb-0">Dostępnych Pojazdów</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a href="/przydzialy" class="btn btn-sm btn-outline-success">Wydaj kluczyki →</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-warning shadow-sm">
                <div class="card-body text-center">
                    <h1 class="display-4 fw-bold text-warning">@wTrasie</h1>
                    <p class="text-muted mb-0">Aut w Trasie</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a href="/przydzialy" class="btn btn-sm btn-outline-warning text-dark">Zarządzaj zwrotami →</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-danger shadow-sm">
                <div class="card-body text-center">
                    <h1 class="display-4 fw-bold text-danger">@wSerwisie</h1>
                    <p class="text-muted mb-0">Aut w Serwisie</p>
                </div>
                <div class="card-footer bg-transparent border-0 text-center pb-3">
                    <a href="/serwis" class="btn btn-sm btn-outline-danger">Podgląd napraw →</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 bg-light shadow-sm">
                <div class="card-body d-grid gap-2 align-content-center">
                    <h6 class="text-muted text-center mb-3">SZYBKIE AKCJE</h6>
                    <a href="/tankowania" class="btn btn-white border shadow-sm text-start">Dodaj Tankowanie</a>
                    <a href="/pojazdy" class="btn btn-white border shadow-sm text-start">Lista Pojazdów</a>
                    <a href="/kierowcy" class="btn btn-white border shadow-sm text-start">Dodaj Kierowcę</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Ostatnie operacje (Przydziały)</h5>
        </div>
        <div class="list-group list-group-flush">
            @if (ostatniePrzydzialy.Any())
            {
                @foreach (var p in ostatniePrzydzialy)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">
                                @if (p.DataZakonczenia == null)
                                {
                                    <span class="badge bg-success me-2">WYDANIE</span>
                                    <span>Wydano: <strong>@p.Pojazd?.Marka @p.Pojazd?.Model</strong> dla @p.Kierowca?.PelneImie</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary me-2">ZWROT</span>
                                    <span>Zwrot: <strong>@p.Pojazd?.Marka @p.Pojazd?.Model</strong> (Przebieg: @p.PrzebiegKoncowy km)</span>
                                }
                            </h6>
                            <small class="text-muted">
                                @(p.DataZakonczenia.HasValue ? p.DataZakonczenia.Value.ToString("g") : p.DataRozpoczecia.ToString("g"))
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="p-3 text-muted text-center">Brak ostatnich aktywności.</div>
            }
        </div>
    </div>
</div>

@code {
    // Liczniki
    private int dostepneAuta = 0;
    private int wTrasie = 0;
    private int wSerwisie = 0;

    // Listy do Alertów
    private List<HarmonogramPrzegladow> alertSerwisowy = new();
    private List<Ubezpieczenie> alertUbezpieczeniowy = new();
    private List<Przydzial> ostatniePrzydzialy = new();

    protected override async Task OnInitializedAsync()
    {
        await ZaladujDane();
    }

    private async Task ZaladujDane()
    {
        var pojazdy = await PojazdSerwis.PobierzWszystkieAsync();
        
        // 1. Liczenie statusów
        dostepneAuta = pojazdy.Count(p => p.Status == Flota.Domain.Enums.StatusPojazdu.Dostepny);
        wTrasie = pojazdy.Count(p => p.Status == Flota.Domain.Enums.StatusPojazdu.WUzytkowaniu);
        wSerwisie = pojazdy.Count(p => p.Status == Flota.Domain.Enums.StatusPojazdu.WSerwisie);

        // 2. Szukanie Alertów Serwisowych (Logika harmonogramów)
        alertSerwisowy = new List<HarmonogramPrzegladow>();
        foreach (var p in pojazdy)
        {
            if (p.Status == Flota.Domain.Enums.StatusPojazdu.Wylaczony) continue;

            var h = await HarmonogramSerwis.PobierzDlaPojazduAsync(p.Id);
            if (h != null && h.CzyWymaganyPrzeglad(p.Przebieg))
            {
                h.Pojazd = p; // Przypisz ręcznie dla wyświetlania
                alertSerwisowy.Add(h);
            }
        }

        // 3. Szukanie Wygasających Ubezpieczeń (np. za mniej niż 30 dni)
        alertUbezpieczeniowy = await UbezpieczenieSerwis.PobierzWygasajaceAsync(30);

        // 4. Ostatnie akcje (Mieszamy aktywne i historię, sortujemy po dacie zmian)
        var aktywne = await PrzydzialSerwis.PobierzAktywneAsync();
        var historia = await PrzydzialSerwis.PobierzHistorieAsync();
        
        ostatniePrzydzialy = aktywne.Concat(historia)
            .OrderByDescending(p => p.DataZakonczenia ?? p.DataRozpoczecia)
            .Take(5)
            .ToList();
    }
}