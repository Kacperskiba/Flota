@page "/serwis"
@using Flota.Domain.Entities
@using Flota.Domain.Interfaces
@inject ISerwisPojazdu SerwisPojazdu
@inject IPojazdSerwis PojazdSerwis
@inject IHarmonogramSerwis HarmonogramSerwis
@inject NavigationManager NavManager

@rendermode RenderMode.InteractiveServer

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Centrum Serwisowe</h2>
        </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-warning h-100">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Aktualnie w naprawie</h5>
                    <span class="badge bg-dark text-white">@autaWSerwisie.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (autaWSerwisie.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var wpis in autaWSerwisie)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@wpis.Pojazd.Marka @wpis.Pojazd.Model</strong> <br/>
                                        <small class="text-muted">@wpis.Opis</small>
                                    </div>
                                    <div class="text-end">
                                        <small>Od: @wpis.DataZgloszenia.ToShortDateString()</small><br/>
                                        <a href="/pojazdy/@wpis.PojazdId" class="btn btn-sm btn-outline-dark mt-1">Podgląd</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">Brak aut w serwisie. Wszystkie sprawne!</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-danger h-100">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Wymagane Przeglądy (Alerty)</h5>
                    <span class="badge bg-white text-danger">@autaDoPrzegladu.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (autaDoPrzegladu.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var alert in autaDoPrzegladu)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@alert.Pojazd.Marka @alert.Pojazd.Model</strong> (@alert.Pojazd.NumerRejestracyjny)<br/>
                                        <small class="text-danger fw-bold">Wymagany serwis!</small>
                                    </div>
                                    <a href="/pojazdy/@alert.Pojazd.Id" class="btn btn-sm btn-danger">Umów</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">Harmonogramy czyste. Żadne auto nie wymaga przeglądu.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Rejestr Zgłoszeń (Globalny)</h5>
        </div>
        <div class="card-body">
            
            <div class="alert alert-secondary">
                <small>Aby dodać nowe zgłoszenie, najlepiej wejdź w <strong>Szczegóły Pojazdu</strong> lub użyj szybkiego formularza poniżej.</small>
            </div>
            
            <div class="row g-2 mb-4 align-items-end">
                <div class="col-md-3">
                    <label class="small">Pojazd</label>
                    <InputSelect class="form-select" @bind-Value="noweZgloszenie.PojazdId">
                        <option value="0">-- Wybierz --</option>
                        @foreach(var p in pojazdy) { <option value="@p.Id">@p.Marka @p.Model</option> }
                    </InputSelect>
                </div>
                <div class="col-md-4">
                    <label class="small">Opis Usterki</label>
                    <InputText class="form-control" @bind-Value="noweZgloszenie.Opis" placeholder="Co się zepsuło?" />
                </div>
                <div class="col-md-2">
                    <label class="small">Data</label>
                    <InputDate class="form-control" @bind-Value="noweZgloszenie.DataZgloszenia" />
                </div>
                <div class="col-md-2">
                    <label class="small">Szacowany Koszt</label>
                    <InputNumber class="form-control" @bind-Value="noweZgloszenie.Koszt" />
                </div>
                <div class="col-md-1">
                    <button class="btn btn-primary w-100" @onclick="DodajZgloszenie">+</button>
                </div>
            </div>

            @if (wszystkieZgloszenia.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Pojazd</th>
                            <th>Data</th>
                            <th>Opis</th>
                            <th>Status</th>
                            <th>Koszt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var z in wszystkieZgloszenia)
                        {
                            <tr>
                                <td>@z.Pojazd?.Marka @z.Pojazd?.Model</td>
                                <td>@z.DataZgloszenia.ToShortDateString()</td>
                                <td>@z.Opis</td>
                                <td>
                                    @if(z.Status == "Zakończone") { <span class="badge bg-success">Zakończone</span> }
                                    else { <span class="badge bg-warning text-dark">W Trakcie</span> }
                                </td>
                                <td>@z.Koszt.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    // Listy danych
    private List<WpisSerwisowy> wszystkieZgloszenia = new();
    private List<WpisSerwisowy> autaWSerwisie = new(); // Te co mają status "W Trakcie"
    private List<HarmonogramPrzegladow> autaDoPrzegladu = new(); // Te co mają alert = true
    private List<Pojazd> pojazdy = new();

    private WpisSerwisowy noweZgloszenie = new() { DataZgloszenia = DateTime.Now, Status = "W Trakcie" };

    protected override async Task OnInitializedAsync()
    {
        await ZaladujDane();
    }

    private async Task ZaladujDane()
    {
        pojazdy = await PojazdSerwis.PobierzWszystkieAsync();
        var rawZgloszenia = await SerwisPojazdu.PobierzWszystkieAsync();
        
        // Sortujemy od najnowszych
        wszystkieZgloszenia = rawZgloszenia.OrderByDescending(z => z.DataZgloszenia).ToList();

        // Filtrujemy te, które są aktualnie naprawiane
        autaWSerwisie = wszystkieZgloszenia.Where(z => z.Status != "Zakończone").ToList();

        // SPRAWDZAMY HARMONOGRAMY (Nowa logika!)
        autaDoPrzegladu = new List<HarmonogramPrzegladow>();
        foreach (var p in pojazdy)
        {
            // Pomijamy wyłączone i te co już są w serwisie
            if (p.Status == Flota.Domain.Enums.StatusPojazdu.Wylaczony || p.Status == Flota.Domain.Enums.StatusPojazdu.WSerwisie) 
                continue;

            var h = await HarmonogramSerwis.PobierzDlaPojazduAsync(p.Id);
            if (h != null && h.CzyWymaganyPrzeglad(p.Przebieg))
            {
                // Musimy ręcznie przypisać pojazd, bo EF czasem nie ładuje relacji w górę przy prostym pobraniu
                h.Pojazd = p; 
                autaDoPrzegladu.Add(h);
            }
        }
    }

    private async Task DodajZgloszenie()
    {
        if (noweZgloszenie.PojazdId == 0) return;

        noweZgloszenie.Status = "W Trakcie";
        await SerwisPojazdu.DodajAsync(noweZgloszenie);
        
        // Reset
        noweZgloszenie = new WpisSerwisowy { DataZgloszenia = DateTime.Now, Status = "W Trakcie" };
        await ZaladujDane();
    }
}