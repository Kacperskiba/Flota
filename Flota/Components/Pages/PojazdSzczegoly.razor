@page "/pojazdy/{Id:int}"
@using Flota.Domain.Entities
@using Flota.Domain.Interfaces
@inject IPojazdSerwis PojazdSerwis
@inject IUbezpieczenieSerwis UbezpieczenieSerwis
@inject NavigationManager NavManager

@rendermode RenderMode.InteractiveServer

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Szczegóły pojazdu</h3>
        <button class="btn btn-outline-secondary" @onclick="Wroc">← Powrót</button>
    </div>

    @if (pojazd == null)
    {
        <p>Ładowanie danych...</p>
    }
    else
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-primary">@pojazd.Marka @pojazd.Model</h4>
                <div class="row">
                    <div class="col-md-3"><strong>Rejestracja:</strong> @pojazd.NumerRejestracyjny</div>
                    <div class="col-md-3"><strong>Rok produkcji:</strong> @pojazd.RokProdukcji</div>
                    <div class="col-md-3"><strong>Przebieg:</strong> @pojazd.Przebieg km</div>
                    <div class="col-md-3">
                        <strong>Status:</strong> 
                        <span class="badge @(pojazd.Status == Flota.Domain.Enums.StatusPojazdu.Dostepny ? "bg-success" : "bg-warning")">
                            @pojazd.Status
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Polisy Ubezpieczeniowe</h5>
            </div>
            <div class="card-body">
                
                @if (ubezpieczenia.Any())
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nr Polisy</th>
                                <th>Ubezpieczyciel</th>
                                <th>Ważne od</th>
                                <th>Ważne do</th>
                                <th>Koszt</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in ubezpieczenia)
                            {
                                // Podświetl na czerwono jeśli wygasa za mniej niż 30 dni
                                var style = (u.DataZakonczenia - DateTime.Now).TotalDays < 30 ? "text-danger fw-bold" : "";
                                <tr class="@style">
                                    <td>@u.NumerPolisy</td>
                                    <td>@u.Ubezpieczyciel</td>
                                    <td>@u.DataRozpoczecia.ToShortDateString()</td>
                                    <td>@u.DataZakonczenia.ToShortDateString()</td>
                                    <td>@u.Koszt.ToString("C")</td>
                                    <td>
                                        <button class="btn btn-danger btn-sm" @onclick="() => UsunPolise(u.Id)">X</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">Brak zarejestrowanych polis.</p>
                }

                <hr />

                <div class="mt-3">
                    <h6 class="mb-3">Dodaj nowe ubezpieczenie</h6>
                    <div class="row g-2">
                        <div class="col-md-2">
                            <label class="small text-muted">Nr Polisy</label>
                            <input class="form-control" @bind="noweUbezpieczenie.NumerPolisy" />
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted">Ubezpieczyciel</label>
                            <input class="form-control" @bind="noweUbezpieczenie.Ubezpieczyciel" />
                        </div>
                        
                        <div class="col-md-2">
                            <label class="small text-muted">Ważne od</label>
                            <input type="date" class="form-control" @bind="noweUbezpieczenie.DataRozpoczecia" />
                        </div>

                        <div class="col-md-2">
                            <label class="small text-muted">Ważne do</label>
                            <input type="date" class="form-control" @bind="noweUbezpieczenie.DataZakonczenia" />
                        </div>
                        
                        <div class="col-md-1">
                            <label class="small text-muted">Koszt</label>
                            <input type="number" class="form-control" @bind="noweUbezpieczenie.Koszt" />
                        </div>
                        
                        <div class="col-md-2 d-grid align-items-end">
                            <button class="btn btn-primary" @onclick="DodajPolise">Dodaj</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Pojazd? pojazd;
    private List<Ubezpieczenie> ubezpieczenia = new();
    private Ubezpieczenie noweUbezpieczenie = new();

    protected override async Task OnInitializedAsync()
    {
        // 1. Pobieramy dane pojazdu
        var wszystkie = await PojazdSerwis.PobierzWszystkieAsync();
        pojazd = wszystkie.FirstOrDefault(p => p.Id == Id);

        // 2. Pobieramy ubezpieczenia
        await OdswiezUbezpieczenia();

        // Ustaw domyślne daty dla formularza (Start: Dziś, Koniec: Za rok)
        ZresetujFormularz();
    }

    private async Task OdswiezUbezpieczenia()
    {
        ubezpieczenia = await UbezpieczenieSerwis.PobierzDlaPojazduAsync(Id);
    }

    private async Task DodajPolise()
    {
        noweUbezpieczenie.PojazdId = Id;
        await UbezpieczenieSerwis.DodajAsync(noweUbezpieczenie);
        
        await OdswiezUbezpieczenia();
        ZresetujFormularz();
    }

    private void ZresetujFormularz()
    {
        noweUbezpieczenie = new Ubezpieczenie 
        { 
            DataRozpoczecia = DateTime.Now, 
            DataZakonczenia = DateTime.Now.AddYears(1) 
        };
    }

    private async Task UsunPolise(int polisaId)
    {
        await UbezpieczenieSerwis.UsunAsync(polisaId);
        await OdswiezUbezpieczenia();
    }

    private void Wroc() => NavManager.NavigateTo("/pojazdy");
}